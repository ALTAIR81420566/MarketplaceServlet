<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>Authorization.jsp</welcome-file>
    </welcome-file-list>



    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>org.epam.mywebapp.Controller.Servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>org.epam.mywebapp.Controller.Servlet.AddingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GeneralPage</servlet-name>
        <servlet-class>org.epam.mywebapp.Controller.Servlet.GeneralPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneralPage</servlet-name>
        <url-pattern>/general</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>org.epam.mywebapp.Controller.Servlet.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyProducts</servlet-name>
        <servlet-class>org.epam.mywebapp.Controller.Servlet.MyProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyProducts</servlet-name>
        <url-pattern>/myProducts</url-pattern>
    </servlet-mapping>


</web-app>
